<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="seq_type_trucks_reception" model="ir.sequence.type">
          <field name="name">REG Type</field>
          <field name="code">reg_code</field>
        </record>
        <record id="seq_trucks_reception" model="ir.sequence">
            <field name="name">reg</field>
            <field name="code">reg_code</field>
            <field name="prefix">TR</field>
            <field name="padding">5</field>
        </record>

        <record model="ir.ui.view" id="trucks_reception_form_view">
            <field name="name">trucks.reception.form</field>
            <field name="model">trucks.reception</field>
            <field name="arch" type="xml">
                <form string="Trucks Reception Form">
                    <header>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Truck Reception "/>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="contract"/>
                                <field name="number"/>
                                <field name="street"/>
                            </group>
                            <group>
                                <field name="driver"/>
                                <field name="car_plates"/>
                            </group>
                        </group>
                        <group col="4">
                            <group col="1">
                                <label for="contract_type" string="Contract Type"/>
                                <field name="contract_type" class="oe_inline" nolabel="1"/>
                            </group>
                            <group col="1">
                                <label for="hired" string="Hired"/>
                                <field name="hired" class="oe_inline" nolabel="1"/>
                            </group>
                            <group col="1">
                                <label for="delivered" string="Delivered"/>
                                <field name="delivered" class="oe_inline" nolabel="1"/>
                            </group>
                            <group col="1">
                                <label for="pending" string="Pending"/>
                                <field name="pending" class="oe_inline" nolabel="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="product"/>
                            <field name="dest"/>
                            <field name="location"/>
                        </group>
                        <button type="object" string="Update"/>
                        <group col="3">
                                <group>
                                    <field name="humidity"/>
                                    <field name="density"/>
                                    <field name="temperature"/>
                                </group>
                            <group>
                                <field name="damaged"/>
                                <field name="broken"/>
                                <field name="impurities"/>
                            </group>
                            <group>
                                <field name="transgenic"/>
                                <field name="other_specs"/>
                            </group>
                        </group>
                        <group>
                            <field name="ticket"/>
                        </group>
                        <group>
                            <group col="1">
                                <group col="3">
                                    <field name="weight_input"/>
                                    <button type="object" string="Update"/>
                                </group>
                                <group col="3">
                                    <field name="weight_output"/>
                                    <button type="object" string="Update"/>
                                </group>
                                <group>
                                    <field name="weight_neto"/>
                                </group>
                            </group>
                            <group>
                                <field name="kilos_damaged"/>
                                <field name="kilos_broken"/>
                                <field name="kilos_impurities"/>
                                <field name="kilos_humidity"/>
                                <field name="weight_neto_analized"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="trucks_reception_tree_view">
            <field name="name">trucks.reception.tree</field>
            <field name="model">trucks.reception</field>
            <field name="arch" type="xml">
                <tree string="Trucks Reception Tree">
                    <field name="name"/>
                    <field name="contract"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="trucks_reception_list_action">
            <field name="name">Trucks Reception</field>
            <field name="res_model">trucks.reception</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first truck reception
                </p>
            </field>
        </record>

        <menuitem id="menu_receptions"
            parent="stock.menu_stock_root"
            name="Receptions"
            sequence="2"/>

        <menuitem
            id="menu_action_trucks_reception_form"
            parent="menu_receptions"
            action="trucks_reception_list_action"/>
    </data>
</openerp>
