<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="seq_type_trucks_reception" model="ir.sequence.type">
          <field name="name">REG Type</field>
          <field name="code">reg_code</field>
        </record>
        <record id="seq_trucks_reception" model="ir.sequence">
            <field name="name">reg</field>
            <field name="code">reg_code</field>
            <field name="prefix">TR</field>
            <field name="padding">5</field>
        </record>

        <record model="ir.ui.view" id="trucks_reception_form_view">
            <field name="name">trucks.reception.form</field>
            <field name="model">trucks.reception</field>
            <field name="arch" type="xml">
                <form string="Trucks Reception Form">
                    <header>
                        <button name="fun_unload" type="object" string="Unload" states="unloading" class="oe_highlight"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label string="Truck Reception "/>
                                <field name="name" class="oe_inline" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="contract_id" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                <field name="partner_id" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                <field name="street"/>
                            </group>
                            <group>
                                <field name="driver" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                <field name="car_plates" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                            </group>
                        </group>
                        <group col="4">
                            <group col="1">
                                <label for="contract_type" string="Contract Type"/>
                                <field name="contract_type" class="oe_inline" nolabel="1"/>
                            </group>
                            <group col="1">
                                <label for="hired" string="Hired"/>
                                <field name="hired" class="oe_inline" nolabel="1"/>
                            </group>
                            <group col="1">
                                <label for="delivered" string="Delivered"/>
                                <field name="delivered" class="oe_inline" nolabel="1"/>
                            </group>
                            <group col="1">
                                <label for="pending" string="Pending"/>
                                <field name="pending" class="oe_inline" nolabel="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="dest"/>
                            <field name="location"/>
                        </group>
                        <button type="object" string="Update" states="analysis" class="oe_highlight"/>
                        <group col="3">
                                <group>
                                    <field name="humidity" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                    <field name="density" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                    <field name="temperature" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                </group>
                            <group>
                                <field name="damaged" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                <field name="broken" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                                <field name="impurities" required="1" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                            </group>
                            <group>
                                <field name="transgenic" attrs="{'readonly':[('state', 'not in', ['analysis'])]}"/>
                            </group>
                        </group>
                        <group>
                            <field name="ticket" attrs="{'readonly':[('state', 'not in', ['weight_input'])], 'required':[('state', 'in', ['weight_input'])]}"/>
                        </group>
                        <group>
                            <group col="1">
                                <group col="3">
                                    <field name="weight_input" attrs="{'readonly':[('state', 'not in', ['weight_input'])], 'required':[('state', 'in', ['weight_input'])]}"/>
                                    <button type="object" string="Update" states="weight_input" class="oe_highlight"/>
                                </group>
                                <group col="3">
                                    <field name="weight_output" attrs="{'readonly':[('state', 'not in', ['weight_output'])], 'required':[('state', 'in', ['weight_output'])]}"/>
                                    <button type="object" string="Update" states="weight_output" class="oe_highlight"/>
                                </group>
                                <group>
                                    <field name="weight_neto"/>
                                </group>
                            </group>
                            <group>
                                <field name="kilos_damaged"/>
                                <field name="kilos_broken"/>
                                <field name="kilos_impurities"/>
                                <field name="kilos_humidity"/>
                                <field name="weight_neto_analized"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="trucks_reception_tree_view">
            <field name="name">trucks.reception.tree</field>
            <field name="model">trucks.reception</field>
            <field name="arch" type="xml">
                <tree string="Trucks Reception Tree">
                    <field name="name"/>
                    <field name="contract_id"/>
                    <field name="product_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="trucks_reception_form_view_permissions">
            <field name="name">trucks.reception.form</field>
            <field name="model">trucks.reception</field>
            <field name="inherit_id" ref="trucks_reception_form_view"/>
            <field name="groups_id" eval="[(6,0, [ref('group_trucks_reception')])]" />
            <field name="arch" type="xml">
                <field name="state" position="attributes">
                    <attribute name="clickable">1</attribute>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="trucks_reception_search_view">
            <field name="name">trucks.reception.search</field>
            <field name="model">trucks.reception</field>
            <field name="arch" type="xml">
                <search>
                    <filter name="analysis" string="Analysis" domain="[('state','in',('analysis'))]"/>
                    <filter name="weight_input" string="Weight input" domain="[('state','in',('weight_input'))]"/>
                    <filter name="unloading" string="Unloading" domain="[('state','in',('unloading'))]"/>
                    <filter name="weight_output" string="Weight output" domain="[('state','in',('weight_output'))]"/>
                    <filter name="done" string="Done" domain="[('state','in',('done'))]"/>
                    <separator/>
                    <group string="Group By">
                        <filter name="group_by_state" string="State"
                                context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record model="ir.actions.act_window" id="trucks_reception_list_action">
            <field name="name">Trucks Reception</field>
            <field name="res_model">trucks.reception</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first truck reception
                </p>
            </field>
        </record>

        <menuitem id="menu_receptions"
            parent="stock.menu_stock_root"
            name="Receptions"
            sequence="2"/>

        <menuitem
            id="menu_action_trucks_reception_form"
            parent="menu_receptions"
            action="trucks_reception_list_action"/>
    </data>
</openerp>
