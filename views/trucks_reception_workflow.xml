<openerp>
    <data>
        <record model="workflow" id="wkf_trucks_reception">
            <field name="name">Trucks reception workflow</field>
            <field name="osv">trucks.reception</field>
            <field name="on_create">True</field>
        </record>

        <record model="workflow.activity" id="analysis">
            <field name="name">Analysis</field>
            <field name="wkf_id" ref="wkf_trucks_reception"/>
            <field name="flow_start" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_analysis()</field>
        </record>
        <record model="workflow.activity" id="weight_input">
            <field name="name">Weight Input</field>
            <field name="wkf_id" ref="wkf_trucks_reception"/>
            <field name="kind">function</field>
            <field name="action">action_weight_input()</field>
        </record>
        <record model="workflow.activity" id="unloading">
            <field name="name">Unloading</field>
            <field name="wkf_id" ref="wkf_trucks_reception"/>
            <field name="kind">function</field>
            <field name="action">action_unloading()</field>
        </record>
        <record model="workflow.activity" id="weight_output">
            <field name="name">Weight Output</field>
            <field name="wkf_id" ref="wkf_trucks_reception"/>
            <field name="kind">function</field>
            <field name="action">action_weight_output()</field>
        </record>
        <record model="workflow.activity" id="done">
            <field name="name">Done</field>
            <field name="wkf_id" ref="wkf_trucks_reception"/>
            <field name="flow_stop" eval="True"/>
            <field name="kind">function</field>
            <field name="action">action_done()</field>
        </record>
    </data>
</openerp>
